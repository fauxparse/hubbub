<% content_for :page_title, "Home" -%>

<% content_tag :div, :id => :dashboard do -%>
	<% content_tag :div, :id => "overdue" do -%>
		<%= content_tag :h2, "Overdue Tasks" %>
		<% content_tag :ul, :id => "overdue-tasks", :class => "overdue tasks" do -%>
			<%= render_tasks_or_nothing @overdue_tasks %>
		<% end -%>
	<% end -%>
	
	<% content_tag :div, :id => "upcoming" do -%>
		<%= content_tag :h2, "Upcoming Tasks" %>
		<% content_tag :ul, :id => "upcoming-tasks", :class => "upcoming tasks" do -%>
			<%= render_tasks_or_nothing @upcoming_tasks %>
		<% end -%>
	<% end -%>

	<% content_tag :div, :id => "recently-completed" do -%>
		<%= content_tag :h2, "Recently Completed" %>
		<% content_tag :ul, :id => "recently-completed-tasks", :class => "recently-completed tasks" do -%>
			<%= render_tasks_or_nothing @recently_completed_tasks %>
		<% end -%>
	<% end -%>
<% end -%>