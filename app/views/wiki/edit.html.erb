<% content_for :page_title, @wiki_page.page_title || "New wiki page" -%>

<% content_for :title do -%>
	<h1>Editing ‘<%= @wiki_page.page_title %>’</h1>
<% end -%>

<% form_for @wiki_page, :url => update_full_wiki_page_path(@wiki_page), :html => { :method => :put } do |form| -%>
	<%= render :partial => "form", :object => form %>
<% end -%>
