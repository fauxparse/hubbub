<% content_tag :li, :class => "task", :id => dom_id(task) do -%>
	<%= link_to task, task %> <%= link_to "Edit", edit_task_path(task), :rel => :facebox, :class => "inline task-edit" %>
	<% content_tag :span, :class => :users do -%>
		<%= task.anybody? ? "Anybody" : task.assignments.collect(&:user).sort.to_sentence %>
	<% end -%>
<% end -%>
