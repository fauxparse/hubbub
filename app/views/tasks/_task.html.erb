<% content_tag :li, :class => task_classes(task), :id => dom_id(task) do -%>
  <% content_tag :span, :class => "task-name" do -%>
    <%= link_to task.id, task_path(task, :format => nil), :class => "task-id" %>
    <%= task.name %>
    <%= link_to "Edit", edit_task_path(task, :format => nil), :rel => :facebox, :class => "inline button task-edit" %>
	<% end -%>
  
	<% content_tag :span, :class => :users do -%>
		<%= task_users(task) %>
	<% end -%>
<% end -%>
